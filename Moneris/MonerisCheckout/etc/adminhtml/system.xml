<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="moneris" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Moneris Payments</label>
                <comment><![CDATA[<b>Please contact Moneris to set up your merchant account and mention configuration code ECNP-00228. It will facilitate the onboarding process.</b>]]></comment>
                <group id="chmonerismonerischeckout" translate="label" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Moneris Checkout - Provided by CollinsHarper.com</label>
                    <field id="active" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Enabled</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/chmonerismonerischeckout/active</config_path>
                    </field>
                    <field id="title" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Title</label>
                        <config_path>payment/chmonerismonerischeckout/title</config_path>
                    </field>
                    <field id="test" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Test Mode</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <config_path>payment/chmonerismonerischeckout/test</config_path>
                    </field>
                    <field id="login" translate="label" type="obscure" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Store ID</label>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <config_path>payment/chmonerismonerischeckout/login</config_path>
                    </field>
                    <field id="password" translate="label" type="obscure" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>API Token</label>
                        <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                        <config_path>payment/chmonerismonerischeckout/password</config_path>
                    </field>
                    <field id="checkout_id" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Checkout </label>
                        <config_path>payment/chmonerismonerischeckout/checkout_id</config_path>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
